      },
    ]}
    image={{
      src: import('~/assets/images/vintage.jpg'),
      alt: 'Vintage Image',
    }}
  />

  <!-- Steps Widget ****************** -->

  {
    steps.enabled && (
      <Steps
        title={steps.title}
        items={steps.items}
        image={{
          src: steps.image.src,
