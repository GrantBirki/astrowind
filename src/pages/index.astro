  <!-- Stats Widget ****************** -->

  {stats.enabled && <Stats items={stats.items} />}

  <!-- CallToAction Widget *********** -->
  {
    callToAction.enabled && (
      <CallToAction
        callToAction={{
          text: callToAction.button.text,
